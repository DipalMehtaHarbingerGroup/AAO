@{
    ViewBag.Title = "Index";
}
<script src="~/Scripts/jquery-ui.js"></script>
<script src="~/Scripts/jquery.ui.touch-punch.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/fonts/font-awesome/css/font-awesome.css" rel="stylesheet" />
<link href="~/Content/custom.css" rel="stylesheet" />
<link href="~/Content/bootstrap-responsive-tabs.css" rel="stylesheet" />

<script>
    function checkLength(){
        var textbox = document.getElementById("searchTerm");
        if(textbox.value.length <= 2){
            alert("Please enter minimum 3 characters");
            return false;
        }
        return true;
    }
   
</script>

@if (TempData["msg"] != null)
{
    @Html.Raw(TempData["msg"])
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 xs-nopadding">
            @*<button type="button" class="ResetBtn" id="Reset">Reset</button>*@
            <ul class="breadcrumb">
                <li><a href="@Url.Content("~/ExamHistory/Index")">Exam History</a></li>
                <li class="active">Search By Exam</li>
            </ul>
        </div>
    </div>
</div>

@using (Html.BeginForm("SearchByQuestions", "SearchByExam", FormMethod.Get))
{
    <div class="col-lg-12 xs-nopadding">
        <div class="content-bg">
            <div class="content-padding">
                <div class="form-inline">
                    <input type="text" placeholder="Enter term to search questions in this program" class="form-control search-input" id="searchTerm" name="SearchTerm" />
                    <input type="submit" onclick="return checkLength()" class="btn btn-primary search-submit" name="submit"  value="Search" />
                    <br/>
                    <label class="radio-inline">
                        <input type="radio" value="Answered" name="Filter" checked>Answered
                    </label>
                    <label class="radio-inline">
                        <input type="radio" value="Unanswered" name="Filter">Unanswered
                    </label>
                    <label class="radio-inline">
                        <input type="radio" value="All" name="Filter">All
                    </label>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .search-input {
        width: 90% !important;
        height: 35px;
    }

    .search-submit {
        height: 35px;
        width: 90px;
        margin-top: 10px;
        margin-bottom: 10px;
        margin-left: 5px;
    }
</style>
